<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Component.Theme.Dark.Zenith">
    <item name="colorPrimary">@color/color_primary_zenith_dark</item>
    <item name="colorPrimaryVariant">@color/color_primary_variant_zenith_dark</item>
    <item name="colorSecondary">@color/color_secondary_zenith_dark</item>
    <item name="colorSecondaryVariant">@color/color_secondary_variant_zenith_dark</item>

    <item name="colorSurface">@color/color_surface_zenith_dark</item>
    <item name="colorError">@color/color_error_zenith_dark</item>

    <item name="colorOnPrimary">@color/color_on_primary_zenith_dark</item>
    <item name="colorOnSecondary">@color/color_on_secondary_zenith_dark</item>
    <item name="colorOnBackground">@color/color_on_background_zenith_dark</item>
    <item name="colorOnSurface">@color/color_on_surface_zenith_dark</item>
    <item name="colorOnError">@color/color_on_error_zenith_dark</item>

    <!-- Components -->
    <item name="actionBarTheme">@style/Widget.MaterialComponents.ActionBar.Surface</item>
    <item name="materialButtonStyle">@style/Component.Widget.Button.ZenithDark</item>
    <item name="radioButtonStyle">@style/Component.Widget.RadioButton.ZenithDark</item>
    <item name="switchStyle">@style/Component.Widget.Switch.ZenithDark</item>
    <item name="checkboxStyle">@style/Component.Widget.CheckBox.ZenithDark</item>
  </style>

  <style name="Component.Widget.Button.ZenithDark">
    <item name="backgroundTint">?attr/colorSecondary</item>
    <item name="android:textColor">?attr/colorOnSecondary</item>
  </style>

  <style name="Component.Widget.RadioButton.ZenithDark">
    <item name="useMaterialThemeColors">false</item>
  </style>

  <style name="Component.Widget.Switch.ZenithDark">
    <item name="useMaterialThemeColors">false</item>
  </style>

  <style name="Component.Widget.CheckBox.ZenithDark">
    <item name="useMaterialThemeColors">false</item>
  </style>

